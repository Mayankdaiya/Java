package labsessions.Day10;

public class Programs {
	
	public static String getStringFormat(String str) {
		StringBuilder res = new StringBuilder();
		int count = 1;
		for(int i=1;i<str.length();i++) {
			if(str.charAt(i) == str.charAt(i-1)) {
				count++;
			} else {
				res.append(count);
				res.append(str.charAt(i-1));
				count = 1;
			}
		}
		res.append(count);
		res.append(str.charAt(str.length()-1));
		return res.toString();
	}
	
	public static int getSecondLargest(int arr[]) {
		int f = -1, s = -1;
		for(int i=0;i<arr.length;i++) {
			if(arr[i]>=f) {
				s = f;
				f = arr[i];
			}
		}
		return s;
	}
	
	public static void firstNonRepeatingChar(String str) {
		int freq[] = new int[26];
		for(int i=0;i<str.length();i++) {
			freq[str.charAt(i)-'a']++;
		}
		char ch = '.';
		for(int i=0;i<str.length();i++) {
			if(freq[str.charAt(i)-'a']==1) {
				ch = str.charAt(i);
				break;
			}
		}
		if(ch=='.') System.out.println("All characters are repeating...");
		else System.out.println("First non repeating char is :"+ch);
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		String str = "aabbbccccd";
		System.out.println(getStringFormat(str));
		
		int arr[] = {10,50,15,55,30,20,45};
		System.out.println(getSecondLargest(arr));
		
		String str2 = "abcdabcdefdk";
		firstNonRepeatingChar(str2);
	}

}
